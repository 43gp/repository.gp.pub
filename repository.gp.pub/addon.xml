<?xml version="1.0"?>
<addon id="repository.gp.pub" name="gp@ Addons Repo" version="1.0.0" provider-name="gp@">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="GP Addon Repo">
        <dir>
            <info compressed="true">https://raw.githubusercontent.com/43gp/repository.gp.pub/main/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/43gp/repository.gp.pub/main/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/43gp/repository.gp.pub/main/</datadir>
            <hashes>false</hashes>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Addons repository of the gp@</summary>
        <description lang="en">The gp@ repo is an unofficial Repository of the Kodi Media Center Software</description>
        <disclaimer/>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
